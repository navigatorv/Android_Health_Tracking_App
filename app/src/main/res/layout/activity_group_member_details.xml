<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F0F3F6">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="166dp"
        android:background="#fff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="top">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp" >

                    <TextView
                        android:textSize="16dp"
                        android:text="Name: "
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#333"
                        android:id="@+id/textView"
                        android:layout_column="0" />

                    <TextView
                        android:textSize="16dp"
                        android:text="Yui"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#333"
                        android:id="@+id/group_other_username"
                        android:layout_column="12" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="16dp"
                        android:text="Goal today:"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#333"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/group_other_goalSteps"
                        android:textColor="#333"
                        android:layout_column="12"
                        android:layout_marginLeft="3dp"
                        android:text="1000" />

                    <TextView
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="#333"
                        android:layout_column="13"
                        android:layout_marginLeft="3dp"
                        android:text="steps" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="16dp"
                        android:text="Group:"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#333"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/group_other_groupName"
                        android:textColor="#333"
                        android:layout_column="12"
                        android:text="Royal"
                        android:layout_marginLeft="3dp" />
                </TableRow>

            </TableLayout>

            <!-- 简介 -->

        </LinearLayout>
        <!-- 分割线 -->
        <View style="@style/bg_line"/>

        <LinearLayout
            android:orientation="horizontal"
            android:background="#22000000"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:textColor="#333"
                android:text="Status:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:textColor="#333"
                android:text="sth"
                android:id="@+id/group_other_status"
                android:layout_gravity="center" />


        </LinearLayout>
    </FrameLayout>



    <LinearLayout style="@style/wrap_layout"
        android:layout_width="match_parent">
        <!-- 上圆角-->

        <!-- 分割线 -->
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <!-- 下圆角-->

    </LinearLayout>


    <!-- 全圆角-->
    <TableLayout style="@style/wrap_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender" />

            <EditText
                android:id="@+id/group_other_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:textColor="#000000"
                android:text="Male" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth" />

            <EditText
                android:id="@+id/group_other_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:textColor="#000000"
                android:text="Mar 2,1993" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height" />

            <EditText
                android:id="@+id/group_other_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:textColor="#000000"
                android:text="180(cm)" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight" />

            <EditText
                android:id="@+id/group_other_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:textColor="#000000"
                android:text="75(kg)" />

        </TableRow>

    </TableLayout>

</LinearLayout>
