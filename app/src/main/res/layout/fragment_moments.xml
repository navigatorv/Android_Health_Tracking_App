<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Moments.FragmentMoments"
    android:orientation="vertical">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="166dp"
        android:background="#fff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginTop="10dip"
            android:layout_gravity="top">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/portrait_iv_me"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:src="@drawable/h3"
                    />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp" >

                    <TextView
                        android:textSize="16dp"
                        android:text="Royal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/groupname_tv_moments"
                        android:textColor="#333"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="16dp"
                        android:text="Goal today:"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#333"
                        android:layout_marginTop="3dp"
                        android:id="@+id/goal_tv_moments" />

                    <TextView
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/goal_display_tv_moments"
                        android:textColor="#333"
                        android:layout_column="12"
                        android:layout_marginLeft="3dp"
                        android:text="1000" />

                    <TextView
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="#333"
                        android:layout_column="13"
                        android:layout_marginLeft="3dp"
                        android:text="steps" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="16dp"
                        android:text="Achieved Steps:"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#333"
                        android:id="@+id/moto_tv_moments"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:id="@+id/steps_status_tv_moments"
                        android:textColor="#333"
                        android:layout_column="12"
                        android:layout_marginLeft="3dp"
                        android:text="111" />
                </TableRow>

            </TableLayout>

            <!-- 简介 -->

        </LinearLayout>
        <!-- 分割线 -->

        <LinearLayout
            android:orientation="horizontal"
            android:background="#22000000"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/progress_tv_moments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:textColor="#333"
                android:text="Progress:  " />

            <TextView
                android:id="@+id/progress_display_tv_moments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:text="1000"
                android:layout_gravity="center_vertical" />

        </LinearLayout>
    </FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_monment_lv" />


</LinearLayout>
